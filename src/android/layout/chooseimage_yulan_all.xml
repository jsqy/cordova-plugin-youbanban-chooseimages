<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#fff" >
	<RelativeLayout
		android:id="@+id/id_top_ly"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_alignParentTop="true"
		android:background="#454545"
		android:clickable="true" >
		<TextView
			android:id="@+id/tv_back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:layout_marginTop="10dp"
			android:background="@drawable/array_left"
			android:textColor="#fff" />
		<RelativeLayout
			android:id="@+id/rl_back"
			android:layout_width="50dp"
			android:layout_height="40dp"
			android:layout_alignParentLeft="true" >
		</RelativeLayout>
		<TextView
			android:id="@+id/tv_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:gravity="center_vertical"
			android:text="预览照片"
			android:textColor="#fff" />
		<Button
			android:id="@+id/btn_ok"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dip"
			android:layout_marginTop="7dp"
			android:layout_marginBottom="7dp"
			android:background="@drawable/shape_corner"
			android:paddingLeft="6dp"
			android:paddingRight="6dp"
			android:text="完成"
			android:textSize="17dp"
			android:textColor="#000" />
	</RelativeLayout>
	<android.support.v4.view.ViewPager
		android:id="@+id/viewPager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/id_top_ly" >
	</android.support.v4.view.ViewPager>
	<!-- 中间滚动条 -->
	<ViewFlipper
		android:id="@+id/viewflipper"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/id_top_ly"
		android:layout_centerVertical="true"
		android:background="#ffffff"
		android:visibility="invisible" />
	<!-- 底部 -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="101dp"
		android:layout_alignParentBottom="true"
		android:background="#00000000"
		android:orientation="vertical" >
		<com.youbanban.cordova.chooseimages.imageloader.HorizontalListView
			android:id="@+id/horizon_listview"
			android:layout_width="match_parent"
			android:layout_height="70dp"
			android:background="#cc000000"
			android:layout_alignParentTop="true" >
		</com.youbanban.cordova.chooseimages.imageloader.HorizontalListView>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:cacheColorHint="#00000000"
			android:background="#66656b" />
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="30dp"
			android:background="#cc000000"
			android:orientation="horizontal" >
			<TextView
				android:id="@+id/tv_xuanze"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_marginRight="8dp"
				android:layout_marginTop="3dp"
				android:text="选择"
				android:textSize="17dp"
				android:textColor="#fff" />
			<ImageView
				android:id="@+id/img_xuanze"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_marginRight="3dp"
				android:layout_marginTop="5dp"
				android:layout_toLeftOf="@+id/tv_xuanze"
				android:src="@drawable/picture_unselected" />
			<RelativeLayout
				android:id="@+id/rl_delete"
				android:layout_width="80dp"
				android:layout_height="30dp"
				android:layout_alignParentRight="true"
				android:alpha="100" >
			</RelativeLayout>
		</RelativeLayout>
	</LinearLayout>
</RelativeLayout>